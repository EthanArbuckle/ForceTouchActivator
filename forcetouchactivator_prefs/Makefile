include theos/makefiles/common.mk

BUNDLE_NAME = forcetouchactivator_prefs
forcetouchactivator_prefs_FILES = forcetouchactivator_prefs.mm
forcetouchactivator_prefs_INSTALL_PATH = /Library/PreferenceBundles
forcetouchactivator_prefs_FRAMEWORKS = UIKit
forcetouchactivator_prefs_PRIVATE_FRAMEWORKS = Preferences

include $(THEOS_MAKE_PATH)/bundle.mk

internal-stage::
	$(ECHO_NOTHING)mkdir -p $(THEOS_STAGING_DIR)/Library/PreferenceLoader/Preferences$(ECHO_END)
	$(ECHO_NOTHING)cp entry.plist $(THEOS_STAGING_DIR)/Library/PreferenceLoader/Preferences/forcetouchactivator_prefs.plist$(ECHO_END)
